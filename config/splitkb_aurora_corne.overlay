/ {
    chosen {
        zmk,display = &nice_view;
    };
};

&nice_view_spi {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-names = "default";
    /* Wir definieren den CS Pin sehr explizit */
    cs-gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
};

&nice_view {
    status = "okay";
    /* Manche nice!views brauchen eine Taktrate von 1MHz zum Starten */
    spi-max-frequency = <1000000>;
};
